<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article%>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-secondary rounded", local:true) do |f| %>

        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="form-control col-sm-10">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%=f.label :description, class: "col-2 col-form-label text-light"%>
          <div class="form-control col-10">
            <%=f.text_area :description, rows:10, class: "form-control" %>
          </div>
        </div>

        <div class="form-group text-center mt-3">
          <%=f.submit class: "btn btn-outline-light btn-lg p-3"%>
        </div>
      <%end %>
      <p><%= link_to 'Return to articles', articles_path, class: "btn btn-outline-secondary" %></p>
    </div>
  </div>
</div>


