<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-secondary rounded", local:true) do |f| %>

  <div class="form-group row">
    <%= f.label :name ,"Category name", class: "col-2 col-form-label text-light" %>
    <div class="form-control col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group text-center mt-3">
    <%=f.submit class: "btn btn-outline-light btn-lg p-3"%>
  </div>
<%end %>