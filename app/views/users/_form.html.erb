<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-secondary rounded", local:true) do |f| %>

        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="form-control col-sm-10">
            <%= f.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%=f.label :email, class: "col-2 col-form-label text-light"%>
          <div class="form-control col-10">
            <%=f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%=f.label :password, class: "col-2 col-form-label text-light"%>
          <div class="form-control col-10">
            <%=f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group text-center mt-3">
          <%=f.submit "Sign up", class: "btn btn-outline-light btn-lg p-3"%>
        </div>
      <%end %>
      <p><%= link_to 'Return to articles', articles_path, class: "btn btn-outline-secondary" %></p>
    </div>
  </div>
</div>


